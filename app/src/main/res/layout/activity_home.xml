<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/azul_escuro"
    tools:context=".HomeActivity">

    <TextView
        android:layout_marginTop="32dp"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:textColor="#1B6067"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Sorteados"/>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="0 à 10"
            android:textColor="#1B6067"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="0 à 100"
            android:textColor="#1B6067"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSortearDez"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:backgroundTint="#1B6067"
            android:text="Sortear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSortearCem"
            android:layout_marginLeft="48dp"
            android:gravity="center"
            android:backgroundTint="#1B6067"
            android:text="Sortear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="0 à 1000"
            android:textColor="#1B6067"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="0 à 10000"
            android:textColor="#1B6067"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnSortearMil"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:backgroundTint="#1B6067"
            android:text="Sortear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnSortearDezMil"
            android:layout_marginLeft="48dp"
            android:gravity="center"
            android:backgroundTint="#1B6067"
            android:text="Sortear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <TextView
        android:layout_marginTop="32dp"
        android:textSize="28sp"
        android:layout_gravity="center"
        android:textColor="#1B6067"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Girar dados"/>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="0 à 6"
            android:textColor="#1B6067"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="0 à 12"
            android:textColor="#1B6067"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnDadosSeis"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:backgroundTint="#1B6067"
            android:text="Sortear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDadosDoze"
            android:layout_marginLeft="48dp"
            android:gravity="center"
            android:backgroundTint="#1B6067"
            android:text="Sortear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="16dp"
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="0 à 20"
            android:textColor="#1B6067"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:layout_weight="1"
            android:text="0 à 100"
            android:textColor="#1B6067"
            android:textSize="22sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_marginLeft="64dp"
        android:layout_marginRight="64dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:id="@+id/btnDadosVinte"
            android:layout_marginLeft="16dp"
            android:gravity="center"
            android:backgroundTint="#1B6067"
            android:text="Sortear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <Button
            android:id="@+id/btnDadosCem"
            android:layout_marginLeft="48dp"
            android:gravity="center"
            android:backgroundTint="#1B6067"
            android:text="Sortear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <Button
        android:layout_width="228dp"
        android:layout_height="80dp"
        android:layout_gravity="center"
        android:layout_marginTop="32dp"
        android:backgroundTint="#1B6067"
        android:drawableRight="@drawable/ic_baseline_chevron_right_24"
        android:onClick="chamarFrases"
        android:paddingLeft="52dp"
        android:text="Frases" />

</LinearLayout>